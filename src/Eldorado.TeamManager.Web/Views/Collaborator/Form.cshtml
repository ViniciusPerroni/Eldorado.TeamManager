@using Eldorado.TeamManager.Domain.Enums;
@model Eldorado.TeamManager.Web.Models.Collaborator.CollaboratorViewModel

<h3 class="page-title-3">@(Model.Collaborator.Id == 0 ? "Novo Colaborador" : "Editar Colaborador")</h3>

<form action="@Url.Action("Save")" method="post" class="g-3">
    <input type="hidden" name="Id" value="@Model.Collaborator.Id" />


    <div class="row">
        <div class="col-sm-8 mb-3">
            <label class="form-label">Nome:</label>
            <input type="text" name="Name" value="@Model.Collaborator.Name" required class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 mb-3">
            <label class="form-label">Data de Nasc. :</label>
            <input type="text" name="BirthDate" value='@string.Format("{0:dd/MM/yyyy}", Model.Collaborator.BirthDate)'
                required class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">RG:</label>
            <input type="text" name="RG" value="@Model.Collaborator.RG" required class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Email:</label>
            <input type="text" name="Email" value="@Model.Collaborator.Email" required class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 mb-3">
            <label class="form-label">Observações:</label>
            <textarea type="text" maxlength="200" rows="4" name="Observation"
                class="form-control">@Model.Collaborator.Observation</textarea>
        </div>
    </div>


    <h3 class="page-title-2">Skills</h3>

    <div class="row">
        <div class="col-sm-8 mb-3">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Banco de Dados
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.DataBase)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Ferramentas
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.SoftwareTools)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Frameworks
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.FrameWork)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            Infraestrutura DevOps
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.DevOpsInfrastructure)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFive">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                            Linguagens de Programação
                        </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse show" aria-labelledby="headingFive"
                        data-bs-parent="#accordionExample">

                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.ProgrammingLanguage)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingSix">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                            Metodologia
                        </button>
                    </h2>
                    <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="headingSix"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @foreach (var skill in Model.Skills)
                            {
                                if (skill.Type == SkillType.Methodology)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" value="@skill.Id" name="SelectedSkills">
                                        <label class="form-check-label" for="inlineCheckbox1">@skill.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8 mb-3 buttons-voltar-gravar">
            <a href='@Url.Action("Index")' class="btn btn-outline-secondary ms-2"><i class="fa fa-left-long"></i>Voltar</a>
            <button type="submit" class="btn btn-secondary"><i class="fa fa-save"></i>Gravar</button>
        </div>
    </div>
</form>