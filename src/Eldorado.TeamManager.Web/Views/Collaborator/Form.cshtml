@using Eldorado.TeamManager.Domain.Enums;
@model Eldorado.TeamManager.Web.Models.Collaborator.CollaboratorViewModel

<h3 class="page-title">@(Model.Collaborator.Id == 0 ? "Novo Colaborador" : "Editar Colaborador")</h3>

<form action="@Url.Action("Save")" method="post" class="row g-3">
    <input type="hidden" name="Id" value="@Model.Collaborator.Id" />

    <div class="col-md-6">
        <div>
            <label class="form-label">Nome:</label>
            <input type="text" name="Name" value="@Model.Collaborator.Name" required class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Data de Nasc.:</label>
            <input type="text" name="BirthDate" value="@Model.Collaborator.BirthDate" required class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">RG:</label>
            <input type="text" name="RG" value="@Model.Collaborator.RG" required class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Email:</label>
            <input type="text" name="Email" value="@Model.Collaborator.Email" required class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Observações:</label>
            <input type="text" name="Observation" value="@Model.Collaborator.Observation" required
                class="form-control" />
        </div>

        <h3 class="page-title col-md-6">Skills</h3>
        <div class="accordion" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        Linguagens de Programação
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                    data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        checkbox1
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                        Banco de Dados
                    </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo"
                    data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        checkbox2
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                        Frameworks
                    </button>
                </h2>
                <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree"
                    data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        checkbox3
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>